<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="user_info">
      <h1>
        <% @user ||= current_user %>
        <div>
          <a href="<%= following_users_user_path(@user) %>">
            <strong>
              <%= @user.following_users.count %>
            </strong>
            following
          </a>
        </div>
        <div>
          <a href="<%= follower_users_user_path(@user) %>">
            <strong>
              <%= @user.follower_users.count %>
            </strong>
            followers
          </a>
        </div>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="followusers">
        <% if @users.any? %>
          <% @users.each do |user| %>
            <li id="followusers-<%= user.id %>">
              <%= link_to gravatar_for(user, size: 50), user %>
              <span class="user"><%= link_to user.name, user %></span>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>